# ============================================
# MENTORLINK ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_password_here

# For local development (without Docker)
# MONGODB_URI=mongodb://localhost:27017/mentorlink

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_characters

# ============================================
# CLOUDINARY CONFIGURATION (Image uploads)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ============================================
# APPLICATION URLS
# ============================================
CLIENT_URL=http://localhost:5173
# For production: CLIENT_URL=https://yourdomain.com

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
